{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        // Connect to a QEMU vm using localhost:1234 after running ${workspaceFolder}/debug.sh
        "name": "Debug in QEMU",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/cmake-build-debug/BorealOS.elf",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerServerAddress": "localhost:1234",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
    },
        {
            "name": "Compile and run in Bochs",
            "type": "f5anything",
            "request": "launch",
            "command": "clear && ${workspaceFolder}/build.sh && ${workspaceFolder}/run.sh --Bochs",
        },
        {
            "name": "Compile and run in QEMU",
            "type": "f5anything",
            "request": "launch",
            "command": "clear && ${workspaceFolder}/build.sh && ${workspaceFolder}/run.sh --QEMU",
        },
        {
            "name": "Compile only",
            "type": "f5anything",
            "request": "launch",
            "command": "clear && ${workspaceFolder}/build.sh",
        },
        {
            "name": "Run in Bochs only",
            "type": "f5anything",
            "request": "launch",
            "command": "clear && ${workspaceFolder}/run.sh --Bochs",
        },
        {
            "name": "Run in QEMU only",
            "type": "f5anything",
            "request": "launch",
            "command": "clear && ${workspaceFolder}/run.sh --QEMU",
        },
    ]
}